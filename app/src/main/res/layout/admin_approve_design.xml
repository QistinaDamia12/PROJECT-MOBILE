<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardRequest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Facility Name -->
            <TextView
                android:id="@+id/previewFacilityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auditorium"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#591339" />

            <!-- Username -->
            <TextView
                android:id="@+id/previewUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginTop="4dp"/>

            <!-- Date & Time -->
            <TextView
                android:id="@+id/previewDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: 15/01/2026 | Time: 10:00 AM"
                android:textColor="#666666"
                android:layout_marginTop="4dp"/>

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <Button
                    android:id="@+id/btnApproveQuick"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Approve"
                    android:backgroundTint="#2E7D32"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/btnRejectQuick"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Reject"
                    android:backgroundTint="#C62828"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
