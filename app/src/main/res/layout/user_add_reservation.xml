<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F2F2F2"
    android:paddingBottom="16dp">

    <!-- TOP BAR -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#6B0B83"
        android:padding="10dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/arrow_back"
            app:tint="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="50dp"
            android:text="UiTM Facilities"
            android:textColor="@android:color/white"
            android:fontFamily="@font/jersey_regular"
            android:textStyle="bold"
            android:textSize="28sp" />
    </RelativeLayout>

    <!-- PAGE TITLE -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Let's start your reservation"
        android:textColor="#333333"
        android:fontFamily="@font/jersey_regular"
        android:textStyle="bold"
        android:textSize="28sp" />

    <!-- FACILITY CARD -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/imgFacility"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="#FAFAFA"/>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tvFacilityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="AD001"
            android:textColor="#333333"
            android:fontFamily="@font/jersey_regular"
            android:textStyle="bold"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/tvFacilityType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auditorium"
            android:textColor="#666666"
            android:fontFamily="@font/jersey_regular"
            android:textSize="25sp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/tvFacilityLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fakulti Sains Komputer"
            android:textColor="#666666"
            android:fontFamily="@font/jersey_regular"
            android:textSize="25sp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/tvFacilityCapacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40 People"
            android:textColor="#444444"
            android:fontFamily="@font/jersey_regular"
            android:textSize="25sp"
            android:layout_marginTop="2dp" />
    </LinearLayout>

    <!-- FORM SECTION -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- DATE PICKER -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:id="@+id/btnOpenCalendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Booking Date"
                    android:textColor="#888888"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/txtSelectedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Date"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- TIME PICKER -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:id="@+id/btnOpenTimePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Booking Time"
                    android:textColor="#888888"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/txtSelectedTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Time"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- PURPOSE -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Purpose of Reservation"
                    android:textColor="#888888"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/etPurpose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="e.g. Club Meeting, Futsal Match"
                    android:background="@android:color/transparent"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:layout_marginTop="4dp"
                    android:inputType="textCapSentences"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- SUBMIT BUTTON -->
    <Button
        android:id="@+id/btnNextToConfirm"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="16dp"
        android:text="Request Reservation"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:textColor="@android:color/white"
        android:backgroundTint="#6B0B83"
        android:fontFamily="@font/jersey_regular"
        app:cornerRadius="30dp"/>
</LinearLayout>

