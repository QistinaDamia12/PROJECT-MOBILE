<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#E8C6FF"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/historyFacilityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jersey_regular"
                android:text="Futsal Court A"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#541389" />

            <TextView
                android:id="@+id/historyStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="#FBFBFB"
                android:padding="4dp"
                android:text="CONFIRMED"
                android:textColor="#2E7D32"
                android:textSize="12sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="8dp"
            android:background="#5E35B1" />

        <TextView
            android:id="@+id/historyDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: 12 Oct 2025"
            android:fontFamily="@font/jersey_regular"
            android:textSize="20dp"
            android:textColor="#3E1566" />

        <TextView
            android:id="@+id/historyTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time: 8:00 PM - 10:00 PM"
            android:fontFamily="@font/jersey_regular"
            android:textSize="20dp"
            android:textColor="#3E1566" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>