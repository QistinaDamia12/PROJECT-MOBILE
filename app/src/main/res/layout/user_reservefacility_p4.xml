<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    android:background="@android:color/white">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/done_outline"
        app:tint="#6B0B83" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reservation Successful!"
        android:textSize="28sp"
        android:fontFamily="@font/jersey_regular"
        android:textColor="#6B0B83"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/txtSuccessDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your booking has been recorded."
        android:fontFamily="@font/jersey_regular"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textColor="#555555" />

    <Button
        android:id="@+id/btnDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to Dashboard"
        android:backgroundTint="#6B0B83"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/jersey_regular"
        android:textSize="20sp" />

</LinearLayout>