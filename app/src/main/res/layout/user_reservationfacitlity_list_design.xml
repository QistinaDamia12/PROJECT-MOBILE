
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="#731972"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imagePreview"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AD001"
            android:textColor="#541389"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/jersey_regular" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="#FBFBFB"
            android:padding="4dp"
            android:text="Available"
            android:textColor="#2E7D32"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auditorium"
            android:textColor="#3E1566"
            android:textSize="16sp"
            android:fontFamily="@font/jersey_regular" />

        <TextView
            android:id="@+id/tvLoca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bangunan Kuliah, Level 6"
            android:textColor="#3E1566"
            android:textSize="16sp"
            android:fontFamily="@font/jersey_regular" />

        <TextView
            android:id="@+id/tvCapacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20 People"
            android:textColor="#3E1566"
            android:textSize="16sp"
            android:fontFamily="@font/jersey_regular" />

        <Button
            android:id="@+id/btnBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/jersey_regular"
            android:textSize="25dp"
            android:background="@drawable/round_button"
            android:text="Reserve Now" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>