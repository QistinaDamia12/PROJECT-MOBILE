<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Image -->

        <!-- Information Area (White Background for better contrast) -->
        <ImageView
            android:id="@+id/imagePreview"
            android:layout_width="match_parent"
            android:layout_height="134dp"
            android:background="@android:color/darker_gray"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="253dp"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header Row: Name and Status Badge -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jersey_regular"
                    android:text="AD001"
                    android:textColor="#541389"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <!-- Status as a styled Badge -->
                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="#FBFBFB"
                    android:padding="4dp"
                    android:text="Available"
                    android:textColor="#2E7D32"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <!-- Subtitle: Facility Type -->
            <TextView
                android:id="@+id/tvType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:fontFamily="@font/jersey_regular"
                android:text="Auditorium"
                android:textColor="#3E1566"
                android:textSize="16sp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="12dp"
                android:background="#F0F0F0" />

            <!-- Details Section (Location & Capacity) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Location -->
                <TextView
                    android:id="@+id/tvLoca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/jersey_regular"
                    android:text="Bangunan Kuliah, Level 6"
                    android:textColor="#3E1566"
                    android:textSize="15sp"
                    app:drawableStartCompat="@android:drawable/ic_menu_mylocation"
                    app:drawableTint="#731972" />

                <!-- Capacity -->
                <TextView
                    android:id="@+id/tvCapacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/jersey_regular"
                    android:text="20 People"
                    android:textColor="#3E1566"
                    android:textSize="15sp"
                    app:drawableStartCompat="@android:drawable/ic_menu_share"
                    app:drawableTint="#731972" />
            </LinearLayout>

            <!-- Action Button -->
            <Button
                android:id="@+id/btnBook"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="#731972"
                android:fontFamily="@font/jersey_regular"
                android:text="Reserve Now"
                android:textAllCaps="false"
                android:textSize="20sp"
                app:cornerRadius="12dp"
                android:onClick="btnBookClicked"/>

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>