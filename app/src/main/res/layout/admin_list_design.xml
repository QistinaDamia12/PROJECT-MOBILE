<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:id="@+id/book_list_design">

    <!-- Horizontal layout: Image on left, details on right -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#E8C6FF">

        <!-- Facility Image -->
        <ImageView
            android:id="@+id/imagePreview"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:background="@android:color/darker_gray" />

        <!-- Spacer -->
        <Space
            android:layout_width="16dp"
            android:layout_height="match_parent" />

        <!-- Facility Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <!-- Name and Status -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AD001"
                    android:textColor="#541389"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/jersey_regular" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="#FBFBFB"
                    android:padding="4dp"
                    android:text="Available"
                    android:textColor="#2E7D32"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="8dp"
                android:background="#5E35B1" />

            <TextView
                android:id="@+id/tvType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auditorium"
                android:textColor="#3E1566"
                android:textSize="16sp"
                android:fontFamily="@font/jersey_regular" />

            <TextView
                android:id="@+id/tvLoca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bangunan Kuliah, Level 6"
                android:textColor="#3E1566"
                android:textSize="16sp"
                android:fontFamily="@font/jersey_regular" />

            <TextView
                android:id="@+id/tvCapacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 People"
                android:textColor="#3E1566"
                android:textSize="16sp"
                android:fontFamily="@font/jersey_regular" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
